{
    "name": "shadowclone",
    "version": "1.0.0",
    "private": true,
    "description": "Minimal AI Assistant",
    "main": "dist/electron/main.js",
    "scripts": {
        "start": "node start.js",
        "compile:electron": "tsc electron/main.ts electron/preload.ts --outDir dist/electron --module commonjs --target ES2020 --esModuleInterop --skipLibCheck",
        "dev": "npm run compile:electron && webpack --mode development && node start.js",
        "build": "npm run compile:electron && webpack --mode production && electron-builder",
        "watch": "webpack --mode development --watch",
        "clean": "rm -rf dist build"
    },
    "build": {
        "appId": "com.shadowclone.app",
        "productName": "ShadowAssistant",
        "directories": {
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "dist/**/*"
        ],
        "win": {
            "target": "nsis"
        }
    },
    "devDependencies": {
        "@types/node": "^20.19.27",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "autoprefixer": "^10.4.16",
        "css-loader": "^6.8.1",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "postcss": "^8.4.32",
        "postcss-loader": "^7.3.3",
        "style-loader": "^3.3.3",
        "ts-loader": "^9.5.1",
        "typescript": "^5.2.2",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "groq-sdk": "^0.37.0",
        "lucide-react": "^0.309.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.3.5"
    }
}